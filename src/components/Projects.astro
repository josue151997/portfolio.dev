---
import GitHub from "/ASTRO.TailwindCSS/ASTRO.TAILWINDCSS/src/icons/Github.astro";
import NextJS from "/ASTRO.TailwindCSS/ASTRO.TAILWINDCSS/src/icons/NextJS.astro";
import Tailwind from "/ASTRO.TailwindCSS/ASTRO.TAILWINDCSS/src/icons/TailwindCSS.astro";
import Link from "/ASTRO.TailwindCSS/ASTRO.TAILWINDCSS/src/icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import HTML from '/ASTRO.TailwindCSS/ASTRO.TAILWINDCSS/src/icons/Html.astro'
import CSS from '/ASTRO.TailwindCSS/ASTRO.TAILWINDCSS/src/icons/CSS.astro'
import NODEJSS from '/ASTRO.TailwindCSS/ASTRO.TAILWINDCSS/src/icons/NodeJSS.astro'
import ReactJss from '../icons/ReactJS.astro'

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#003159] text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#003159] text-white",
    icon: CSS,
  },
  NODEJSS: {
    name: "CSS",
    class: "bg-[#003159] text-white",
    icon: NODEJSS,
  },
  ReactJss: {
    name: "ReactJss",
    class: "bg-[#003159] text-white",
    icon: ReactJss,
  }
};
const PROJECTS = [
  {
    title: "Front-End Web Development",
    description:
      "Bienvenido a mi biblioteca de tecnologías y herramientas para el desarrollo web. Aquí encontrarás un conjunto completo de habilidades que abarcan desde el diseño y desarrollo front-end hasta la implementación segura de aplicaciones en el backend.",
    link: "https://github.com/josue151997/New-Portfolio",
    github: "https://github.com/josue151997/New-Portfolio",
    image: "/projects/githubrepo1.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.NODEJSS, TAGS.ReactJss ],
  },
  
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-450 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-400 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
